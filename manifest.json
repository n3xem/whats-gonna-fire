{
  "manifest_version": 3,
  "name": "GitHub Workflows Viewer",
  "version": "1.0",
  "description": "GitHubリポジトリのワークフロー一覧を表示する拡張機能",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "GitHub Workflows Viewer"
  }
} 
