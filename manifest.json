{
  "manifest_version": 3,
  "name": "What's Gonna Fire",
  "version": "1.0",
  "description": "GitHubのPRマージ時に実行されるワークフローを可視化する拡張機能",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["dist/content_script.js"]
    }
  ],
  "action": {
    "default_title": "What's Gonna Fire",
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
} 
